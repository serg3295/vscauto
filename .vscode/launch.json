    "version": "0.2.0",
    "configurations": [
		{
            "name": "Debug Lua",
            "type": "lua",
            "request": "launch",
            "stopOnEntry": true,
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "path": [
                "${workspaceFolder}/?.lua",
            ],
            "cpath": "${workspaceFolder}/?.dll",
            "arg": [],
            "consoleCoding": "utf8",
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Debug Lua with input",
            "type": "lua",
            "request": "launch",
            "stopOnEntry": true,
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "path": [
                "${workspaceFolder}/?.lua",
            ],
            "cpath": "${workspaceFolder}/?.dll",
            "arg": [],
            "consoleCoding": "utf8",
            "console": "integratedTerminal",
            "outputCapture": [
                "io.write"
            ],
            "presentation": {
                "focus": true
            }
        }
    ]
}
